<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/imgNguoiDung_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_avarta"
                    tools:srcCompat="@drawable/icon2" />
                <!--            android:background="@drawable/background_avarta"-->
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenNguoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Ten nguoi dung"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNgayDang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ngay dang"
                    android:textSize="15dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tieu de"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/imgHinhAnhBaiDang_custom"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@drawable/default_image_empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Đánh giá: "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/blue_light1"
                android:gravity="left|center"/>
            <RatingBar
                android:id="@+id/ratingBar_custom_travel"
                android:layout_width="wrap_content"
                android:scaleX="1"
                android:layout_gravity="left|center"
                android:scaleY="1"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="true"
                style="@android:style/Widget.Holo.RatingBar"
                android:backgroundTint="@color/blue_light1"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_tips_and_updates_24" />
        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="mo ta"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_location_on_24" />

        <TextView
            android:id="@+id/tvDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Dia chi"
            android:textSize="16dp"
            android:textStyle="bold|italic"/>
    </LinearLayout>


        <TextView
            android:id="@+id/tvGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi phi"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="9">


            <ImageButton
                android:id="@+id/btnFavorite_custom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_volunteer_activism_24_0"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tvCountFavorite"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="6"
                android:text="duytan va 145+ nguoi khac"
                android:paddingRight="20dp"
                android:gravity="left|center"/>

            <Button
                android:id="@+id/btnXemChiTiet_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xem chi tiết"
                android:background="@drawable/backround_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/Silver"
            android:orientation="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>