<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:id="@+id/linearlayout_custom_item_hotel_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="7"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/img_hotel_custom_item_hotel_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/edtTenHodel_custom_item_hotel_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/edtNgayDang_custom_item_hotel_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/edtNguoiDang_custom_item_hotel_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/edtTrangThai_custom_item_hotel_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="5"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                  android:layout_gravity="bottom|center">
                  <Button
                      android:id="@+id/buttonXemChiTiet_main_admin"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:text="Xem chi tiết"
                      android:layout_weight="2"
                      android:layout_marginRight="5dp"
                      android:backgroundTint="@color/blue_light1"
                      android:layout_gravity="center"
                      android:gravity="center"/>

                  <Button
                      android:id="@+id/buttonBoQuan_main_admin"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:text="Bõ qua"
                      android:layout_weight="3"
                      android:backgroundTint="@color/red"
                      android:layout_marginLeft="5dp"
                      android:layout_gravity="center"
                      android:gravity="center"/>
              </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>