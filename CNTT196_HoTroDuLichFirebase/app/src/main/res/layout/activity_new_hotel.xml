<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ActivityNewHotel">

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="top"
    android:background="@color/blue_light1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:weightSum="10">
        <ImageButton
            android:id="@+id/btnBack_new_hotel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:layout_marginLeft="-15dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_keyboard_backspace_24"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="Thêm bài đăng"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="-55dp"/>
    </LinearLayout>
</com.google.android.material.bottomnavigation.BottomNavigationView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:text="Khách sạn:"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_weight="3"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/edtTenHotel_New_Hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ems="10"
                android:inputType="textMultiLine"
                android:background="@drawable/boder"
                android:layout_gravity="center"
                android:hint="Nhập ở đây..."
                android:textColorHint="@color/Silver"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:text="Mô tả:"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_weight="3"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/edtMoTa_New_Hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ems="10"
                android:inputType="textMultiLine"
                android:background="@drawable/boder"
                android:layout_gravity="center"
                android:hint="Nhập ở đây..."
                android:textColorHint="@color/Silver"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="7"
            android:background="@drawable/boder">

            <TextView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:text="Hạng sao:"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_weight="3"
                android:textSize="15dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="right">
                    <RadioButton
                        android:id="@+id/radioButton1sao_new_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1✯"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/orange"/>
                    <RadioButton
                        android:id="@+id/radioButton2sao_new_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2✯"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/orange"/>
                    <RadioButton
                        android:id="@+id/radioButton3sao_new_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3✯"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/orange"/>
                    <RadioButton
                        android:id="@+id/radioButton4sao_new_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4✯"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/orange"/>
                    <RadioButton
                        android:id="@+id/radioButton5sao_new_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5✯"
                        android:textStyle="bold"
                        android:textColor="@color/orange"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/boder"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Địa chỉ khách sạn"
                android:layout_gravity="left"
                android:gravity="center|left"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Tỉnh/TP:"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_weight="2"
                    android:textSize="15dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="8"
                    android:gravity="center|left">
                    <Spinner
                        android:id="@+id/spinnerTinh_New_Hotel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:background="@drawable/boder"
                        android:layout_gravity="center"
                        />
                    <ImageButton
                        android:id="@+id/expanSpiner_Tinh_New_Hotel"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_expand_more_24"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right"/>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Quận/huyện:"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_weight="2"
                    android:textSize="15dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="8"
                    android:gravity="center|left">
                    <Spinner
                        android:id="@+id/spinnerHuyen_New_Hotel"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="8"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:background="@drawable/boder"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:id="@+id/expanSpiner_Huyen_New_Hotel"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_expand_more_24"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right"/>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Xã/phường:"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_weight="2"
                    android:textSize="15dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="8"
                    android:gravity="center|left">
                    <Spinner
                        android:id="@+id/spinnerXa_New_Hotel"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="8"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:background="@drawable/boder"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:id="@+id/expanSpiner_Xa_New_Hotel"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_expand_more_24"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right"/>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Địa chỉ:"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_weight="2"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/edtDiaChi_New_Hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:background="@drawable/boder"
                    android:layout_gravity="center"
                    android:hint="Tên đường/ số nhà..."
                    android:textColorHint="@color/Silver"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/boder"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Hình ảnh"
                android:layout_gravity="left"
                android:gravity="center|left"
                android:textSize="15dp"/>
            <ImageView
                android:id="@+id/Image_New_Hotel"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/default_image_empty" />
            <Button
                android:id="@+id/btnChonAnh_New_Hotel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Chọn ảnh"
                android:layout_gravity="right"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dsHinh_New_Hotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/boder">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Thêm phòng"
                android:layout_gravity="left"
                android:gravity="center|left"
                android:textSize="15dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dsPhong_New_Hotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnThemPhong_New_Hotel"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Thêm phòng"
                android:layout_gravity="right"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnDang_New_Hotel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Đăng bài"
            android:layout_gravity="right"/>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>