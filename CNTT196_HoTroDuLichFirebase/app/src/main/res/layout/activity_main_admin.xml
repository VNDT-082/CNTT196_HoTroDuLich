<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon2"
                android:paddingBottom="20dp"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ỨNG DỤNG HỖ TRỢ DU LICH"
                android:textColor="@color/blue_light1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="CNTT196_AppHoTroDuLich_Firebase"
                android:textColor="@color/blue_light1"
                android:textSize="14dp"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="20dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUYỀN QUẢN TRỊ VIÊN"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/blue_light1"
                android:textSize="28dp"
                android:layout_gravity="top"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                android:background="@drawable/boder">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/imgButton_Travel_main_admin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/intro2"
                        android:background="@color/Turquoise1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Du lịch"
                        android:textColor="@color/blue_new2"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:gravity="bottom|center"
                        android:layout_marginBottom="5dp"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                android:background="@drawable/boder">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/imgButton_Hotel_main_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/intro3"
                        android:scaleType="centerCrop"
                        android:background="@color/Turquoise1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Khách sạn"
                        android:textColor="@color/blue_dark1"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:gravity="bottom|center"
                        android:layout_marginBottom="5dp"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                android:background="@drawable/boder">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/imgButton_User_main_admin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_user2"
                        android:background="@color/Turquoise1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Người dùng"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:gravity="bottom|center"
                        android:layout_marginBottom="5dp"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                android:background="@drawable/boder">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/imgButton_Infor_main_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/intro1"
                        android:scaleType="centerCrop"
                        android:background="@color/WhiteSmoke" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Về chúng tôi"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:gravity="bottom|center"
                        android:layout_marginBottom="5dp"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                android:background="@drawable/boder">
                <Button
                    android:id="@+id/btnDangXuat_main_admin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:text="Đăng xuất"
                    android:backgroundTint="@color/CadetBlue1"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>