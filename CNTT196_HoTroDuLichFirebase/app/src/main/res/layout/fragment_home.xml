<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_light1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/icon2" />

            <TextView
                android:id="@+id/tvDiaChi_travel_custom_fragHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="CNTT196"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="left|center"
                android:textColor="@color/white"/>
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/Silver">


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2_frgHome"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/circleIndicator3_frgHome"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:ci_drawable="@color/CadetBlue1"
                    android:layout_gravity="bottom|center"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left|center"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/btn_Previous_frgHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_keyboard_arrow_left_24" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center"
                    android:background="@color/white">
                    <ImageButton
                        android:id="@+id/btn_Next_frgHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_navigate_next_24"
                        android:scaleType="fitCenter"
                        android:background="#80000000"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/boder"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center"
                    android:background="@color/LavenderBlush1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/boder">
                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/travel_icon1"
                            android:layout_gravity="right"
                            android:background="@color/Turquoise1"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/boder">
                        <ImageButton
                            android:id="@+id/imageButton1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"
                            android:src="@drawable/hotel_icon_1"
                            android:layout_gravity="left"
                            android:background="@color/OrangeRed1"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/boder"
                        android:layout_marginLeft="5dp">
                        <ImageButton
                            android:id="@+id/imageButton3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/plane_ticket1"
                            android:layout_gravity="right"
                            android:background="@color/CadetBlue1"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài viết điểm du lịch mới》"
                android:textStyle="bold"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="15dp"/>
            <androidx.viewpager2.widget.ViewPager2
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:padding="10dp"
                android:id="@+id/viewPager_Travel_frgHome"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bài viết khách sạn mới》"
                android:textStyle="bold"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="15dp"/>

            <androidx.viewpager2.widget.ViewPager2
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:padding="10dp"
                android:id="@+id/viewPagerHotel_frgHome"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hình ảnh nổi bậc》"
                android:textStyle="bold"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="15dp"/>

            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableLayout
                android:id="@+id/tablelayout_frgHome"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgTablelayout_fraHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@tools:sample/backgrounds/scenic" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>