<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/imgNguoiDung_custom_item_hoiDap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_avarta"
                    android:src="@drawable/icon2" />
                <!--            android:background="@drawable/background_avarta"-->
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenNguoiDung_custom_item_hoiDap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Ten nguoi dung"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNgayDang_custom_item_hoiDap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ngay dang"
                    android:textSize="12dp"
                    android:layout_marginTop="-15dp"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/imgBtnDelete_custom_item_hoiDap"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                app:srcCompat="@drawable/baseline_delete_forever_24"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tvNoiDung_custom_item_hoiDap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="noi dung"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_item_traloi_custom_item_hoiDap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:background="@color/blue_light1">
            <ImageButton
                android:id="@+id/imgBnt_show_more_custom_item_hoiDap"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_light1"
                app:srcCompat="@android:drawable/ic_menu_more" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>