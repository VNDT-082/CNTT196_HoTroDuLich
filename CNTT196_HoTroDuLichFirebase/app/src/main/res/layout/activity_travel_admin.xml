<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTravelAdmin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnBack_travel_admin"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="top|left"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ỨNG DỤNG HỖ TRỢ DU LICH"
                android:textColor="@color/blue_light1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="CNTT196_AppHoTroDuLich_Firebase"
                android:textColor="@color/blue_light1"
                android:textSize="14dp"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="40dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUYỀN QUẢN TRỊ VIÊN"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/blue_light1"
                android:textSize="28dp"
                android:layout_gravity="top"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/edtSearch_travel_admin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:hint="Tìm kiếm..."
                android:background="@drawable/boder"/>

            <ImageButton
                android:id="@+id/btnSearch_travel_admin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_baseline_search_24" />
            <ImageButton
                android:id="@+id/btnRefesh_travel_admin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                app:srcCompat="@drawable/baseline_autorenew_24" />
            <ImageButton
                android:id="@+id/btnAdd_travel_admin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                app:srcCompat="@drawable/baseline_add_24" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Điểm du lịch》"
            android:textColor="@color/blue_light1"
            android:textSize="14dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_travel_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>